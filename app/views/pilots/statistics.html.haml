#aboutus
  .container
    .section_header
      %h3 VATEUD PTD Statistics
    .row
      .span6.intro  
        %h4 Trainee Statistics (P1 and above)
        %ul
          %li
            %span.stats_label Total pilots enrolled:
            %span.badge= @pilots_total  
          %li
            %span.stats_label Passed theory test:
            %span.badge= @theoretical
          %li
            %span.stats_label Passed practical examination:
            %span.badge= @practical
          %li
            %span.stats_label Upgraded:
            %span.badge= @graduated
      
      .span6.intro  
        %h4 Trainees by rating
        %ul
          %li
            %span.stats_label Newbie Training:
            %span.badge= @newbie_count
          %li
            %span.stats_label P1:
            %span.badge= @p1_count
          %li
            %span.stats_label P2:
            %span.badge= @p2_count
          %li
            %span.stats_label P4:
            %span.badge= @p4_count  
    .row   
      .span6.intro  
        %h4 Trainees by division
        %ul
          - for division in @divisions
            %li
              %span.stats_label= division.name
              %span.badge= division.pilots.count

                 
      .span6.intro  
        %h4 Other Statistics
        %ul
          %li
            %span.stats_label Total examinations held:
            %span.badge= @examinations_total  
          %li
            %span.stats_label Total trainings held:
            %span.badge= @trainings
          %li
            %span.stats_label Total examiners:
            %span.badge= @examiners
          %li
            %span.stats_label Total instructors:
            %span.badge= @instructors
          
    .row
      .span12.intro   
        %h4 Monthly Activity
        = content_tag :div, "", id: "pilots_chart", data: {pilots: Pilot.chart_data(1.month.ago)} 
        %h4 Yearly Activity
        = content_tag :div, "", id: "pilots_yearly_chart", data: {pilots: Pilot.yearly_chart_data(1.year.ago)} 
       